{
    "compilerOptions": {
      "allowJs": true,
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "importHelpers": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "types": [
        "node"
      ],
      "lib": [
        "esnext",
        "scripthost",
      ],
    },
    "include": [
      "src/**/*.ts",
      "tests/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}

